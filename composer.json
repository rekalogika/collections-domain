{
    "name": "rekalogika/collections-domain",
    "description": "Transforms a Doctrine Collection object into our Recollection object, which extends Collection itself but also extends PageableInterface from our rekalogika/rekapager library.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "domain",
        "collections",
        "doctrine",
        "pagination",
        "orm",
        "recollection",
        "minimalrecollection",
        "count",
        "precounting",
        "extra-lazy",
        "rekapager",
        "keyset-pagination",
        "cursor-pagination",
        "batch",
        "batch-processing",
        "repository"
    ],
    "authors": [
        {
            "name": "Priyadi Iman Nurcahyo",
            "email": "priyadi@rekalogika.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Rekalogika\\Domain\\Collections\\": "src/"
        }
    },
    "require": {
        "php": "^8.2",
        "doctrine/collections": "^2.2.2 || ^2.3",
        "rekalogika/collections-common": "^0.16.1",
        "rekalogika/collections-contracts": "^0.16.1",
        "rekalogika/rekapager-contracts": "^0.22 || ^1.0",
        "rekalogika/rekapager-doctrine-collections-adapter": "^0.22 || ^1.0",
        "rekalogika/rekapager-keyset-pagination": "^0.22 || ^1.0"
    }
}
